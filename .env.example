# Get your OpenAI API key from https://platform.openai.com/
OPENAI_API_KEY=your-openai-api-key
PORTFOLIO_MANAGER_MODEL=gpt-3.5-turbo-16k

# Alpaca Trading API Configuration
# Get your API keys from https://app.alpaca.markets/
ALPACA_API_KEY=your-alpaca-api-key
ALPACA_API_SECRET=your-alpaca-secret-key

# Financial Datasets API Configuration
FINANCIAL_DATASETS_API_KEY=your-financial-datasets-api-key
FINANCIAL_DATASETS_BASE_URL=https://financialmodelingprep.com/api

# Seeking Alpha API Configuration
SEEKING_ALPHA_API_KEY=your-seeking-alpha-api-key
SEEKING_ALPHA_BASE_URL=https://seeking-alpha-api.p.rapidapi.com
SEEKING_ALPHA_HOST=seeking-alpha-api.p.rapidapi.com

# Portfolio Management Constants
INITIAL_CASH=100000.0
BACKTEST_PERIOD_YEARS=1
LOOKBACK_PERIOD_MONTHS=3

# Trading Configuration
TICKERS=AAPL,MSFT,GOOGL
START_DATE=2024-10-29  # Optional, defaults to 3 months before end date
END_DATE=2025-01-29    # Optional, defaults to today
SHOW_REASONING=true    # Optional, defaults to false

# Analyst Configuration
# Comma-separated list of analyst IDs to use. Available IDs:
# - technical_analyst_agent: Technical analysis
# - fundamentals_agent: Fundamental analysis
# - sentiment_analysis_agent: Sentiment analysis
# - valuation_agent: Valuation analysis
# Leave empty to show interactive selection prompt when using CLI
SELECTED_ANALYSTS=technical_analyst_agent,fundamentals_agent,sentiment_analysis_agent,valuation_agent

# Autonomous Mode Configuration
AUTONOMOUS_MODE=false
TRADING_INTERVAL=60
MARKET_HOURS_ONLY=true
TRADING_TIMEZONE=America/New_York
MIN_TRADING_INTERVAL=5
MAX_TRADING_INTERVAL=240

# Safety Limits
MAX_POSITION_SIZE=25000
MAX_PORTFOLIO_VALUE=1000000
RETRY_ATTEMPTS=3
RETRY_DELAY=5

# Data Fetching Limits
FINANCIAL_METRICS_LIMIT=10
INSIDER_TRADES_LIMIT=1000
NEWS_LIMIT=1000
BALANCE_SHEET_LIMIT=2

# Display Settings
PROGRESS_REFRESH_RATE=4
PROGRESS_COLUMN_WIDTH=100
AGENT_NAME_WIDTH=20